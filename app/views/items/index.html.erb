<h1>Items</h1>

<table width="100%">
  <tr>
	<th></th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Is active</th>
    <th>Slideshow</th>
    <th>Sold</th>
    <th>For Sale</th>
  </tr>

<% @items.each do |item| %>
	<% 
		photo_src = "/images/oops.jpg"
		if item.item_photos.first != nil
			photo_src = item.item_photos.first.photo.url(:thumb)
		end
	%>
  <tr>
	<td valign="top"><img src="<%= photo_src %>" width=75 %></td>
    <td valign="top"><%=h item.title %></td>
    <td valign="top"><%=h item.description %></td>
    <td valign="top"><%=h item.price %></td>
    <td valign="top"><%= yes_or_no(item.is_active) %></td>
    <td valign="top"><%= yes_or_no(item.show_in_slideshow) %></td>
    <td valign="top"><%= yes_or_no(item.is_sold) %></td>
    <td valign="top"><%= yes_or_no(item.is_forsale) %></td>
    <td valign="top"><%= link_to 'Show', item %></td>
    <td valign="top"><%= link_to 'Edit', edit_item_path(item) %></td>
    <td valign="top"><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>